<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Detailed" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%p] (%t) %m%n"/>
        </Console>
        <Console name="Minimal" target="SYSTEM_OUT">
            <PatternLayout pattern="[%p] %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Minimal"/>
        </Root>
    </Loggers>
</Configuration>